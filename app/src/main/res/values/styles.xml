<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_purple_500</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
        <item name="colorSecondary">@color/md_purple_200</item>
        <item name="colorAccent">@color/md_purple_200</item>
<!--        to remove default actionBar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
<!--        App wide font-->
        <item name="android:fontFamily">@font/pt_sans</item>

<!--        <item name="android:statusBarColor" tools:targetApi="M" >@android:color/transparent</item>-->
        <item name="android:windowLightStatusBar" tools:targetApi="M">@bool/dark_status_bar_icon</item>
<!--        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="M">true</item>-->


    </style>

    <style name="toolbarStyle" >
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:fontFamily">@font/pt_sans_bold</item>

    </style>

</resources>
