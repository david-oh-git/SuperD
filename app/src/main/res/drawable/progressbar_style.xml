<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/background">

        <shape
            android:shape="rectangle">

            <gradient
                android:startColor="#CFD8DC"
                android:centerColor="#CFD8DC"
                android:centerY="1.0"
                android:endColor="#CFD8DC"
                android:angle="270" />

            <corners
                android:radius="100dp" />

        </shape>

    </item>

    <item android:id="@+id/progress">

        <clip>

            <shape>

                <gradient
                    android:startColor="@color/progress_bar_color"
                    android:centerColor="@color/progress_bar_color"
                    android:centerY="1.0"
                    android:endColor="@color/progress_bar_color"
                    android:angle="270" />

                <corners
                    android:radius="100dp" />

            </shape>



        </clip>
    </item>

</layer-list>