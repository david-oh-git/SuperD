<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>
        <import type="androidx.core.content.ContextCompat"/>

        <variable
                name="clickListener"
                type="android.view.View.OnClickListener" />
        <variable
                name="viewModel"
                type="io.audioshinigami.superd.SharedViewModel" />

        <variable
                name="fileData"
                type="io.audioshinigami.superd.data.source.db.entity.FileData" />
    </data>

    <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="2dp"
            android:layout_margin="@dimen/card_margin">

        <RelativeLayout
                android:id="@+id/id_view_background"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            <ImageView
                    android:contentDescription="@string/str_imbtn_description"
                    android:id="@+id/id_img_btn_delete"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    app:srcCompat = "@drawable/ic_delete"
                    android:layout_width="@dimen/dimen_imgbtn"
                    android:layout_height="@dimen/dimen_imgbtn"/>

            <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/dimen_txtvw_txtsize"
                    android:textColor="@color/md_black_1000"
                    android:text="@string/str_txtvw_delete"
                    android:layout_toStartOf="@id/id_img_btn_delete"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/id_view_forground"
                android:background="@color/md_white_1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:onClick="@{clickListener}"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/image_btn_description"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:icon = "@{ viewModel.activeDownloads.contains(fileData.url) }"
                    android:id="@+id/id_play_pause"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/circular_button"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" />

            <ProgressBar
                    android:max="@integer/progressbar_maxValue"
                    android:progress="@{fileData.progressValue}"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_dwloadprogressbar"
                    app:layout_constraintStart_toEndOf="@+id/id_play_pause"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/id_filename"
                    android:layout_marginTop="8dp"/>

            <TextView
                    android:textSize="@dimen/filename_text_size"
                    android:text="@{fileData.fileName}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_filename"
                    app:layout_constraintEnd_toEndOf="@+id/id_dwloadprogressbar"
                    app:layout_constraintStart_toStartOf="@+id/id_dwloadprogressbar"
                    android:textAlignment="center" app:layout_constraintTop_toTopOf="@+id/id_play_pause"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>

